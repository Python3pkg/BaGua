#!/usr/bin/env python
#coding:utf-8

"""BaGua

Usage:
  bagua <index>
  bagua -r
  bagua -s <keyword>
  bagua -v 

太极八卦

Examples:
  查看第一卦(乾卦)
  bagua 1
  
  卜一卦
  bagua -r

Options:
  -r --random       卜一卦
  -s --search       Search index for <keyword>
  -v --version      Print the version number
"""

# require the dependencies
from bagua import *
from docopt import docopt

if __name__ == '__main__':
	options = docopt(__doc__, version='BaGua {}'.format(VERSION))

	if options["--random"]:
		print shake_gua64()
	elif options["--search"]:
		print "search :", options['<keyword>']
	# elif options["<index>"] is None:
	# 	print shake_gua64()
	else:
		show(int(options["<index>"]))
